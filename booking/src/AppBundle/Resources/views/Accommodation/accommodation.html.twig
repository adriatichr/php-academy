{% extends 'AppBundle::layout.html.twig' %}

{% macro printCategory(category) %}
    <span class="zvjezdice">
        {% if category != null %}
            {% for i in 1..category -%}
                *
            {%- endfor %}
        {% endif %}
    </span>
{% endmacro printCategory %}
{% macro printPrice(price) %}
    <div class="cijena">Price: <span class="red">{{ price }} â‚¬</span></div>
{% endmacro %}

{% import _self as helper %}

{% block content %}

    <h1>{{ accommodation.name }}</h1>

    <div class="col-2-wrapper">
        <div class="col-2 white kartica">
            <img src="{{ asset('images/accommodation/apartman' ~ accommodation.id ~ '.jpg') }}" alt="Apartment image" />
        </div>
        <div class="col-2">
            {{ helper.printCategory(accommodation.category) }}
            <p>Location: {{ accommodation.place.name }}</p>
            <p>
                {{ accommodation.description }}
            </p>
            {{ helper.printPrice(accommodation.pricePerDay) }}

            <div class="kalendarWrap">
                <table class="kalendar">
                    <caption>July</caption>
                    <thead>
                        <tr>
                            <th>Mon</th>
                            <th>Tue</th>
                            <th>Wed</th>
                            <th>Thu</th>
                            <th>Fri</th>
                            <th class="weekend">Sat</th>
                            <th class="weekend">Sun</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set month = 7 %}
                        {% for day in generateDatesForMonth(month, 'now'|date('Y')) %}
                            {% if loop.index % 7 == 1 %}<tr>{% endif %}
                                <td class="{{ getDayClass(day, month, reservedDates) }}">{{ day.format('d') }}</td>
                            {% if loop.index % 7 == 0 %}</tr>{% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}